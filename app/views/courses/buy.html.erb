<h1>購買課程</h1>

<%= form_for(@order) do |f| %>
    <div class="field">
      <%= f.label("recipient") %>
      <%= f.text_field(:recipient) %>
    </div>

    <div class="field">
      <%= f.label("address") %>
      <%= f.text_field(:address) %>
    </div>
  
    <div class="submit">
      <%= f.submit("Submit")%>
    </div>
<% end %>