<h1>課程列表</h1>

<%= link_to "新增課程", new_course_path if user_signed_in? %>

<table>
  <thead>
    <tr>
      <td>name</td>
      <td>price</td>
      <td>intro</td>
      <td>hour</td>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <td><%= course.name %></td>
      <td><%= course.price %></td>
      <td><%= course.intro %></td>
      <td><%= course.hour %></td>
    <td>
      <%= link_to "修改", edit_course_path(course) %>
      <%= link_to "刪除", course_path(course), method: "delete", data: { confirm: "Do You Sure" } %>
    </td>
    <% end %>
  </tbody>
</table>
