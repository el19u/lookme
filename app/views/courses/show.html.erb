<h1> 
  <%= @course.name %>

  <% if user_signed_in? && current_user.favorite_courses.include?(@course) %>
    <button id="like-btn" class="favorited" data-id="<%= @course.id %>">Like!</button>
  <% else %>
    <button id="like-btn" data-id="<%= @course.id %>">Like!</button>
  <% end %>

</h1>


<%= form_with(model: @review, url: course_reviews_path(@course), local: false, class: "new_review") do |f| %>
    <div class="field">
      <%= f.label("title") %>
      <%= f.text_field(:title) %>
    </div>

    <div class="field">
      <%= f.label("rating") %>
      <%= f.select(:rating,[ 1,2,3,4,5 ], include_blank: true ) %>
    </div>

    <div class="field">
      <%= f.label("content") %>
      <%= f.text_area(:content) %>
    </div>
  
    <div class="submit">
      <%= f.submit("Submit")%>
    </div>

    <h2>review</h2>
      <div class="review-container">
        <%= render @reviews %>
      </div>
<% end %>